<section class="container" style="margin-top: 5em;">
    <div class="row my-5">
        <div class="col-12">
            <h2>Obras</h2>
        </div>
    </div>
    <div class="card-columns card-columns-obras">

        {{#each obras}}
        <div class="card">
            <a href="obra">
            <img class="card-img-top img-fluid" src="./uploads/{{fotoNombre}}" alt="Card image cap">
            </a>
            <div class="card-block obras-card-block">
                <h4 class="card-title obra-coleccion"><a href="obra/{{id}}">{{nombreObra}}</a></h4> 
                <p class="card-text">{{description}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><small class="text-muted gold">{{lugarCreacion}}</small></li>
                <li class="list-group-item"><small class="text-muted">{{precio}} MXN </small></li>
            </ul>
        </div>
        {{/each}}


       
    </div>
    <div class="row">
        <div class="col-12">
            <div class="w-100 my-5 text-center">
            <span class="px-2"><a href="#" class="paginacion">   <   </a></span>
            <span class="px-2"><a href="#" class="paginacion">   1   </a></span>
            <span class="px-2"><a href="#" class="paginacion">   2   </a></span>
            <span class="px-2"><a href="#" class="paginacion"><strong class="gold">   3   </strong></a></span>
            <span class="px-2"><a href="#" class="paginacion">   4   </a></span>
            <span class="px-2"><a href="#" class="paginacion">   5   </a></span>
            <span class="px-2"><a href="#" class="paginacion">   >   </a></span>
            </div>
        </div>
    </div>
</section>

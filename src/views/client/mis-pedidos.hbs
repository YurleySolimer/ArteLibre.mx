<div class="container-fluid inicial">
    <div class="content-admin">
        <div class="title m-5">
            <h2>Mis Pedidos</h2>
        </div>
        <div class="section pedidos">
            <div class="tabla mis-pedidos">
                <table class="table table-borderless my-5">
                    <thead style="background-color: #bda00899;">
                        <tr>
                            <th scope="col">Obra</th>
                            <th scope="col">Ubicación</th>
                            <th scope="col">Estimado</th>
                            <th scope="col">Precio</th>
                            <th scope="col"> <span class="badge-recibido">Estado</span></th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each obras}}
                        <tr>
                            <!-- Enlace a los detalles de la obra y a la página del artista -->
                            <td><button data-toggle="modal" data-target="#datos-obra-Recibido" class="titulo-mis-obras">
                                    <h2>{{nombreObra}}</h2>
                                </button><a href="#" class="artista-tabla">
                                    <h3 class="text-muted">{{apellido}} {{nombre}} </h3>
                                </a></td>
                            <!-- Ubicación de la obra -->
                            <td>{{pais}}, {{region}} </td>
                            <!-- Tiempo estimado de envio, antes de que se defina aparece como "-" o vacio -->
                            <td>-</td>
                            <!-- Precio designado por el artista -->
                            <td class="text-muted">{{precio}} MXN</td>
                            <!-- Estado de la transacción -->
                            <td><span class="badge-Recibido">{{estadoObra}}</span></td>
                            <!-- Contacto con el artista o reclamo a los de ArteLibre -->
                            <td>
                                <div class="opciones-admin-list">
                                    <a href="mailto:{{email}}" class="contactar"><i class="fas fa-envelope"></i></a>
                                    <a href="tel:{{telf}}" class="contactar"><i class="fas fa-phone"></i></a>
                                    <button data-toggle="modal" data-target="#alerta-venta{{id}}" class="borrar"><i
                                            class="fas fa-exclamation-triangle"></i></button>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{> Footer }}
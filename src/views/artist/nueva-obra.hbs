<section class="container" style="margin-top: 6em;">
    <div class="m-5">
        <h2>Nueva obra</h2>
    </div>

    <form action="/nueva-obra" method="POST" enctype="multipart/form-data" class="form" >
        <div class="row mb-3">
            <div class="col-12">
                <input type="file" name="image" accept="image/gif, image/png, image/jpeg" multiple required id="gallery-photo-add" style="display: none;">
                <label for="gallery-photo-add" class="label-agregar-fotos">Agregar fotos</label>
                <br>
                <small class="text-muted p-0 m-0">Para eliminar una foto haz click sobre ella</small>
            </div>
            <br>
            <div id="gallery" class="gallery row">

            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="Nombre" name="nombre" aria-describedby="NombreHelp"
                        placeholder="Escribe aquí el Nombre de la obra" required>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="precio">Precio (MXN)</label>
                    <input type="number" class="form-control" id="precio" name="precio" aria-describedby="Precio"
                        placeholder="Precio de la obra" required>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label for="descripción">Descripción</label>
                    <textarea class="form-control" id="descripcion" name="descripcion" aria-describedby="descripcion"
                                placeholder="Describe la obra" required></textarea>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="Coleccion">Colección</label>
                    <select type="text" class="form-control" id="Colección" name="coleccion" aria-describedby="colecciónHelp" required>
                        <option value=0>Ninguna</option>
                        {{#each colecciones}}
                        <option value="{{id}}">{{nombreColeccion}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="lcreacion">Lugar de Creación</label>
                    <input type="text" class="form-control" id="lcreacion" name="lcreacion" aria-describedby="creacionHelp"
                        placeholder="Dónde se creó la obra" required>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="fcreacion">Fecha de Creación</label>
                    <input type="date" class="form-control" id="fcreacion" name="fcreacion" aria-describedby="creacionHelp"
                        placeholder="Cuándo se creó la obra" min="1990-01-01" required>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="tecnica">Técnica</label>
                    <input type="text" class="form-control" id="tecnica" name="tecnica" aria-describedby="tecnicaHelp"
                        placeholder="Técnica que se utilizó" required>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="estilo">Estilo</label>
                    <input type="text" class="form-control" id="estilo" name="estilo" aria-describedby="estilo"
                        placeholder="Estilo de la obra" required>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="row m-0 p-0">
                    <div class="col-6 p-0 m-0">
                        <div class="form-group">
                            <label for="ancho">Ancho</label>
                            <input type="text" class="form-control" id="ancho" name="ancho" aria-describedby="anchoHelp"
                                placeholder="100cm" required>
                        </div>
                    </div>
                    <div class="col-6 p-0 m-0">
                        <div class="form-group ml-3">
                            <label for="alto">Alto</label>
                            <input type="text" class="form-control" id="alto" name="alto" aria-describedby="altoHelp"
                                placeholder="100cm" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12-col-md-6">
                <div class="form-group">
                    <div class="form-check m-4">
                        <input class="form-check-input" onchange='check()' name="subasta" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck" id="label-check">
                            
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-12-col-md-6">
                <div class="form-group">
                    <div class="form-check m-4">
                        <input class="form-check-input" onchange='checkdos()' name="copias" type="checkbox" id="gridCheck2">
                        <label class="form-check-label" for="gridCheck2" id="label-check2">
                            
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-12 text-right">
                <input type="submit" value="Guardar" class="guardar-obra">
            </div>
        </div>
    </form>
</section>

